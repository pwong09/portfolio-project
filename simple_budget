#Portfoli project - simple budget calculator

income = input("What is your monthly income after taxes? ")
housing = input("How much do you spend on housing per month? ")

def my_budget(income, housing):
    if (housing <= (income * 0.51) and housing > 0):
        needs = (income * 0.6) - housing
        save = income * .2
        extra = income * .2
        return needs, save, extra
    elif (housing > (income * 0.51) and housing < (income * 0.8)):
        needs = (income * 0.8) - housing
        save = income * .1
        extra = income * .1
        return needs, save, extra
    else:
        needs = income - housing
        save = 0
        extra = 0
        return needs, save, extra

budget = my_budget(income, housing)

print("Your needs budget, after housing costs, is: ")
print(budget[0])

print("Your savings goal per month is: ")
print(budget[1])

print("Your disposable budget is: ")
print(budget[2])
